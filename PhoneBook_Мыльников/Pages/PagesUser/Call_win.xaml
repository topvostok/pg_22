<Page x:Class="PhoneBook_Мыльников.Pages.PagesUser.Call_win"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhoneBook_Мыльников.Pages.PagesUser"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="700"
      Title="Call_win">

    <Border CornerRadius="10,0,0,0">
        <Border.Background>
            <SolidColorBrush Color="White" Opacity="1.0"/>
        </Border.Background>

        <Grid>
            <Grid.Resources>
                <ResourceDictionary Source="/Resources/BtnRes.xaml" />
            </Grid.Resources>

            <ScrollViewer x:Name="scroll_user">
                <Border x:Name="Info_user" MinHeight="530">
                    <Grid>

                        <Label Content="Звонок" Margin="39,28,26,0" Foreground="Black" FontSize="30" FontFamily="Yu Gothic UI Semibold"
                               HorizontalContentAlignment="Left" Height="52" VerticalAlignment="Top"/>

                        <Label Content="Клиент" Margin="42,85,26,0" Foreground="Black" FontSize="15" FontFamily="Yu Gothic UI Semilight"
                               HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <ComboBox x:Name="user_select" FontFamily="Yu Gothic UI Semilight" Margin="42,114,243,0"
                                  Height="30" VerticalAlignment="Top" FontSize="14"/>

                        <Label Content="Категория звонка" Margin="42,145,26,0" Foreground="Black" FontSize="15"
                               FontFamily="Yu Gothic UI Semilight"
                               HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <ComboBox x:Name="call_category_text" FontFamily="Yu Gothic UI Semilight" Margin="42,174,243,0"
                                  Height="30" VerticalAlignment="Top" FontSize="14"/>

                        <Label Content="Начало звонка" Margin="39,211,232,0" Foreground="Black" FontSize="15"
                               FontFamily="Yu Gothic UI Semilight"
                               HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <Grid Margin="30,229,126.2,265.4">
                            <DatePicker Style="{StaticResource styleDatePicker}" x:Name="date_start_call" Height="35"
                                        Margin="9,10,214,0" VerticalAlignment="Top"
                                        FontFamily="Yu Gothic UI Light" FontSize="14"/>
                            <TextBox Style="{StaticResource BaseBox}" x:Name="time_start" Height="35"
                                     Background="#FFDEDEDE" Margin="0,10,19,0" VerticalAlignment="Top"
                                     HorizontalAlignment="Right" Width="185"/>
                        </Grid>

                        <Label Content="Конец звонка" Margin="39,275,232,0" Foreground="Black" FontSize="15"
                               FontFamily="Yu Gothic UI Semilight"
                               HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <Grid Margin="30,296,126.2,198.4">
                            <DatePicker Style="{StaticResource styleDatePicker}" x:Name="date_end_call" Height="35"
                                        Margin="9,10,214,0" VerticalAlignment="Top"
                                        FontFamily="Yu Gothic UI Light" FontSize="14"/>
                            <TextBox Style="{StaticResource BaseBox}" x:Name="time_finish" Height="35"
                                     Background="#FFDEDEDE" Margin="0,10,19,0" VerticalAlignment="Top"
                                     HorizontalAlignment="Right" Width="185"/>
                        </Grid>

                        <Button Style="{StaticResource BtnRedac}" Margin="0,0,136.2,24" VerticalAlignment="Bottom"
                                Height="40" HorizontalAlignment="Right" Width="105" Click="Click_Call_Redact">
                            <Image Source="/Images/redac.png" Width="20" Height="20"/>
                        </Button>

                        <Button x:Name="btn_cancel" Style="{StaticResource BtnRedac}" Background="#FFE48F2B"
                                Margin="0,0,26.2,24"
                                VerticalAlignment="Bottom" Height="40" HorizontalAlignment="Right" Width="105"
                                Click="Click_Cancel_Call_Redact">
                            <Image Source="/Images/back.png" Width="20" Height="20"/>
                        </Button>

                        <Button x:Name="btn_remove" Style="{StaticResource BtnRedac}" Background="#FFE42B2B"
                                Margin="30,0,0,23.6"
                                VerticalAlignment="Bottom" Height="40" Click="Click_Remove_Call_Redact"
                                HorizontalAlignment="Left" Width="105">
                            <Image Source="/Images/del.png" Width="20" Height="20"/>
                        </Button>
                    </Grid>
                </Border>
            </ScrollViewer>

        </Grid>
    </Border>
</Page>
