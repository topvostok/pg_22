<Page x:Class="PhoneBook_Мыльников.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhoneBook_Мыльников.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="#ffe8e8e8">
        <Grid.Resources>
            <ResourceDictionary Source="/Resources/BtnRes.xaml"/>
        </Grid.Resources>

        <Grid Margin="0,0,0,0" VerticalAlignment="Top" Height="60">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="31" Direction="260" Color="#ffc1c1c1" ShadowDepth="0"/>
            </Grid.Effect>
            <Border CornerRadius="00,00,00,00" Margin="0,0,0,0">
                <Border.Background>
                    <SolidColorBrush Color="#ff2c2c2c" Opacity="1.0"/>
                </Border.Background>
            </Border>
            <Image x:Name="img" Source="/Images/logo.png" Margin="19,8,0,0" HorizontalAlignment="Left" Width="41"/>
        </Grid>

        <Grid Margin="10,77,10,0" Height="51" VerticalAlignment="Top">
            <StackPanel x:Name="List_Move" Orientation="Horizontal" Margin="0,-7,0,7">
                <Border x:Name="People_Itms" Margin="5,3,10,0" Height="45" CornerRadius="5,5,5,5"
                        Style="{StaticResource Grid_Itm_Anim}" MouseDown="Click_Phone" Padding="7,7,7,7">
                    <Grid Height="30">
                        <Image Source="/Images/people.png" Margin="5,0,0,0" HorizontalAlignment="Left" Width="29" Height="30" VerticalAlignment="Top"/>
                        <Label x:Name="People_Text" Content="Клиенты" Margin="44,0,0,0" Foreground="#ff171717" FontSize="15" FontFamily="Corbel"
                               VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Height="30" VerticalAlignment="Top"/>
                    </Grid>
                </Border>

                <Border x:Name="Equipment_Itms" Margin="5,3,0,0" Height="45" Padding="7,7,7,7" CornerRadius="5,5,5,5" Style="{StaticResource Grid_Itm_Anim}" MouseDown="Click_History">
                    <Grid Height="30">
                        <Image Source="/Images/calls.png" Margin="5,0,0,0" HorizontalAlignment="Left" Width="29" Height="30" VerticalAlignment="Top"/>
                        <Label Content="История звонков" Margin="44,0,0,0" Foreground="#ff2c2c2c" FontSize="15" FontFamily="Corbel" VerticalContentAlignment="Center"
                               HorizontalContentAlignment="Left" Height="30" VerticalAlignment="Top"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
        <Border x:Name="filterPanel" Margin="10,128,10,0" Height="80" VerticalAlignment="Top"
        Padding="10" CornerRadius="5" Background="#FFDEDEDE" Visibility="Visible">
            <StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Фильтр по дате:" VerticalAlignment="Center" 
                      Margin="0,0,10,0" FontWeight="SemiBold" FontFamily="Yu Gothic UI Light"/>

                    <TextBlock Text="С:" VerticalAlignment="Center" Margin="0,0,5,0" 
                      FontFamily="Yu Gothic UI Light"/>
                    <DatePicker x:Name="dateFromPicker" Width="120" Margin="0,0,15,0"
                       Style="{StaticResource styleDatePicker}" FontFamily="Yu Gothic UI Light"/>

                    <TextBlock Text="По:" VerticalAlignment="Center" Margin="0,0,5,0"
                      FontFamily="Yu Gothic UI Light"/>
                    <DatePicker x:Name="dateToPicker" Width="120"
                       Style="{StaticResource styleDatePicker}" FontFamily="Yu Gothic UI Light" RenderTransformOrigin="0.495,0.433"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Тип звонка:" VerticalAlignment="Center" 
                      Margin="0,0,10,0" FontWeight="SemiBold" FontFamily="Yu Gothic UI Light"/>

                    <ComboBox x:Name="cbCallType" Width="120" Margin="0,0,15,0"
                     FontFamily="Yu Gothic UI Light" Height="30">
                        <ComboBoxItem Content="Все звонки" Tag="0" IsSelected="True"/>
                        <ComboBoxItem Content="Исходящие" Tag="1"/>
                        <ComboBoxItem Content="Входящие" Tag="2"/>
                    </ComboBox>

                    <TextBlock Text="Номер:" VerticalAlignment="Center" Margin="0,0,5,0"
                      FontFamily="Yu Gothic UI Light"/>
                    <TextBox x:Name="tbPhoneNumber" Width="120" Margin="0,0,15,0"
                    Style="{StaticResource BaseBox}" Height="30"
                    FontFamily="Yu Gothic UI Light"/>


                    <Button x:Name="btnApplyFilter"
                   Click="BtnApplyFilter_Click" Margin="0,0,10,0"
                   Padding="10,5" Style="{StaticResource BtnRedac}"
                   FontFamily="Yu Gothic UI Light" Height="30"
                            Background="#32CD32">
                        <Image Source="/Images/ok.png" Width="60"></Image>
                    </Button>

                    <Button x:Name="btnClearFilter" 
                   Click="BtnClearFilter_Click" Padding="10,5"
                   Style="{StaticResource BtnRedac}"
                   FontFamily="Yu Gothic UI Light" Height="30" Background="#FFE42B2B" Width="60" >
                        <Image Source="/Images/del.png"></Image>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Margin="10,240,10,10" CornerRadius="10,10,10,10">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="1.0"/>
            </Border.Background>
            <Grid MinHeight="300">
                <ScrollViewer x:Name="scroll_main">
                    <StackPanel x:Name="parent">

                    </StackPanel>
                </ScrollViewer>
                <Frame x:Name="frame_main" NavigationUIVisibility="Hidden" Visibility="Hidden" Opacity="0"/>

            </Grid>
        </Border>

    </Grid>
</Page>
