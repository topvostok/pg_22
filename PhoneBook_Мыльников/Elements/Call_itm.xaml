<UserControl x:Class="PhoneBook_Мыльников.Elements.Call_itm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhoneBook_Мыльников.Elements"
             mc:Ignorable="d" >
    <Border x:Name="border" Opacity="1" Margin="10,5,10,5" Height="100" CornerRadius="7,7,7,7" Background="#FFF1f1f1">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary Source="/Resources/BtnRes.xaml" />
        </Grid.Resources>

        <Image x:Name="img_category_call" Source="/Images/in.png" Margin="21,10,0,0" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" Width="28"/>

        <Label Content="Категория звонка" x:Name="category_call_text" Margin="57,5,101,0" Foreground="Black" FontFamily="Corbel"
               HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Height="35" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>

        <Label Content="Bремя звонка" x:Name="time_call_text" Margin="57,36,63,0" Foreground="Black" FontSize="16" FontFamily="Corbel"
               HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>

        <Label Content="Номер" x:Name="number_call_text" Margin="57,61,63,0" Foreground="Black" FontSize="16" FontFamily="Corbel"
               HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>

        <Button Style="{StaticResource BtnRedac}" Background="#FF2C2C2C" Margin="0,5,9.6,0" VerticalAlignment="Top" Height="40"
                HorizontalAlignment="Right" Width="63" Click="Click_redact">
            <Image Source="/Images/redac.png" Width="20" Height="20"/>
        </Button>

        <Button Style="{StaticResource BtnRedac}" Background="#FFE42B2B" Margin="0,0,9.6,10" VerticalAlignment="Bottom" Height="40"
                HorizontalAlignment="Right" Width="63" Click="Click_remove">
            <Image Source="/Images/del.png" Width="20" Height="20"/>
        </Button>
    </Grid>
    </Border>
</UserControl>
