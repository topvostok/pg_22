<UserControl x:Class="PhoneBook_Мыльников.Elements.Add_itm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhoneBook_Мыльников.Elements"
             mc:Ignorable="d">
    <Border x:Name="border" Opacity="1" Margin="10,10,10,10" Height="80" CornerRadius="7,7,7,7">
        <Grid>
            <Grid.Resources>
                <ResourceDictionary Source="/Resources/BtnRes.xaml" />
            </Grid.Resources>
            <Button Style="{StaticResource BtnRedac}"
                    Background="#FF2C2C2C"
                    Margin="0,0,0,10" VerticalAlignment="Center" Height="50" HorizontalAlignment="Center" Width="400" Click="Click_add">
                <Image Source="/Images/plus.png" Width="20" Height="20"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
